@model IList<CiviKey.ViewModel.ContactViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="partners-content">
    <div class="partners-title">
        Le projet CiviKey rassemble de nombreux acteurs : ergothérapeutes, grandes entreprises,
        développeurs et étudiants.
        <br />
        Les différents partenaires du projet sont ici rangés par ordre alphabétique.
        <br />
        Cliquez sur le nom de chaque entité pour en savoir plus.
    </div>
    <div class="partner-list">
        <div class="partner-list-container">
            <div class="partners-begin-back">
            </div>
            @for( int i = 0; i < Model.Count; i++ )
            {
                <div class="partners-elem">
                    <div class="partners-elem-content">
                        @Html.Partial( "_ContactDisplay", Model[i] )
                        </div>
                        <div class="partners-sep @if( i == Model.Count - 1 )
                                                 { @("invis") }
                                                 else
                                                 { @("vis") }" >
                    </div>
@*                    <div style="clear: both;">*@
                    @*</div>*@
                </div>
                if( i % 2 != 0 )
                {
                    <div class="youpiyaaa" style="clear:both;"></div>
                }
            }
            <div style="clear:both;"></div>
            <div class="partners-end-back">
            </div>
        </div>
    </div>
</div>
