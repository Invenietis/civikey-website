                <div class="clearfix"></div>
            </div>
        <div id="import" class="modal modal-cvk fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="resetForm()">&times;</button>
                        <h3 class="modal-title">Proposer votre clavier pour l'inclure à la blibliothèque</h3>
                    </div>
                    <div class="modal-body">
                        <form class="form" ng-class="{ 'validate' : submitted  }" name="form">
                            <div class="form-group">
                                <label>Nom du clavier</label>
                                <span class="text-counter">{{ newKeyboard.name.length  || 0 }} / 30</span>
                                <input name="name" class="form-control" type="text" required ng-maxlength="30" maxlength="30" ng-model="newKeyboard.name" />
                            </div>
                            <div class="form-group">
                                <label>Descriptif du clavier</label>
                                <span class="text-counter">{{ newKeyboard.description.length  || 0 }} / 165</span>
                                <textarea name="description" class="form-control" ng-maxlength="165" maxlength="165" required ng-model="newKeyboard.description"></textarea>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Nom de l'auteur</label>
                                        <input class="form-control" type="text" required ng-model="newKeyboard.author" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input name="email" class="form-control" required ng-validate type="email" ng-model="newKeyboard.email" />
                                    </div>
                                </div>
                            </div>
                            
                            <p>Clavier choisi (.xml): <b>{{keyboard.name}}</b></p>
                            
                            @*<img class="thumb" ng-src="{{thumbnail}}" ng-show="thumbnail" />*@
                            <div class="row">
                                <div class="col-md-6">
                                    <span class="btn btn-cvk btn-file">
                                        <i class="glyphicon glyphicon-picture"></i> Choisir le clavier a envoyer
                                        <input name="picture" type="file" class="btn btn-info" required ng-file-select="onFileSelect($files)">
                                    </span>
                                </div>
                                <div class="col-md-6">
                                    <button class="btn btn-cvk pull-right" ng-disabled="isDisabled()" ng-click="submitKeyboard()"> Envoyer le clavier</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render( "~/bundles/scripts/angular" )
    @Scripts.Render( "~/bundles/scripts/upload" )
    @Scripts.Render( "~/bundles/scripts/lightbox" )
}