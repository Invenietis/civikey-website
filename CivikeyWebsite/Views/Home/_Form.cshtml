@model CivikeyWebsite.Models.SupportEmailViewModel

<div class="form-group">
    <label for="email">Adresse email : </label>
    @Html.TextBoxFor( m => m.Email, new { placeholder = "Adresse email", @class = "form-control" } )
    @Html.ValidationMessageFor( m => m.Email )
</div>
<div class="form-group">
    <label for="subject">Objet de la question : </label>
    @Html.TextBoxFor( m => m.Subject, new { placeholder = "Objet", @class = "form-control" } )
    @Html.ValidationMessageFor( m => m.Subject )
</div>
<div class="form-group">
    <div class="textarea">
        <label for="exampleInputFile">Rédigez ici votre question : </label><br />
        @Html.TextAreaFor( m => m.Body, new { rows = 8, cols = 49 } )
        @Html.ValidationMessageFor( m => m.Body )
    </div>
</div>

<button type="submit" class="btn btn-default">Envoyer</button>