@model CivikeyWebsite.Controllers.HomeController.DownloadFormViewModel
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Télécharger Civikey</h4>
    </div>
    @using( Ajax.BeginForm( "DownloadSubscription", "Home", new AjaxOptions { HttpMethod = "Post", OnSuccess = "onCompleteForm(data)", UpdateTargetId = "modal-content-download" } ) )
    {
        <div class="modal-body">
            <div class="alert alert-info" role="alert">Afin de vous tenir au courant des évolutions de Civikey, nous vous proposons de nous indiquer votre adresse e-mail.</div>
            <div class="form-group">
                <label for="inputEmail"></label>
                @Html.LabelFor( a => a.Email )
                @Html.TextBoxFor( a => a.Email, new { placeholder = "votreadresse@mail.com", @class = "form-control" } )
                @Html.ValidationMessageFor( a => a.Email )
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary" id="downloadConfirmation">Télécharger maintenant</button>
        </div>
    }
</div>