<!DOCTYPE html>
<html lang="en" class="no-touch">
<head>
    <meta charset="utf-8" />
    <title>Civikey</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:title" content="Civikey" />
    <meta property="og:image" content="@Url.Content("~/Content/images/civikey.png")" />
    <meta property="og:site_name" content="Civikey" />
    <meta property="og:description" content="Civikey est un ensemble de solutions logicielles qui a pour but d’aider les personnes en situation de handicap à utiliser un ordinateur." />

          @Styles.Render( "~/bundles/styles/bootstrap" )
          @Styles.Render( "~/bundles/styles/site" )><!--[if lt IE 9]> <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script> <![endif]-->
    @Scripts.Render( "~/bundles/scripts/prefix" )
    @RenderSection( "styles", required: false )
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
