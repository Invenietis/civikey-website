<!DOCTYPE html>
<html lang="en" class="no-touch">
<head>
    <meta charset="utf-8" />
    <title>Civikey</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render( "~/bundles/styles/bootstrap" )
    @Styles.Render( "~/bundles/styles/site" )
    <!--[if lt IE 9]> <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script> <![endif]-->
    @*@Scripts.Render( "~/bundles/scripts/prefix" )*@
    @RenderSection( "styles", required: false )
</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand"></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav center-nav">
                    <li>@Html.ActionLink( "Découvrir", "Index", "Home" )</li>
                    @*<li>@Html.ActionLink( "Premiers pas", "GetStarted", "Home" )</li>*@
                    <li>@Html.ActionLink("Fonctionnalités", "Features", "Home")</li>
                    <li>@Html.ActionLink( "Bibliothèque de claviers", "Keyboards", "Home" )</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4 align-left">
                    <ul>
                        <li>@Html.ActionLink( "Premisers pas", "GetStarted", "Home" )</li>
                        <li>@Html.ActionLink( "Les fonctionnalités", "Features", "Home" )</li>
                        
                    </ul>
                    <div class="clearfix"></div>
                    <p class="align-left">
                        Site web dévelopé par 
                        <a href="http://invenietis.com/fr"><img src="@Url.Content("~/Content/images/partners/grayscale/logo-small_white.png")" /></a>

                    </p>
                </div>
                <div class="col-md-4 col-md-offset-4">
                    <p>Suivre le projet</p>
                    <a href="https://github.com/Invenietis/ck-certified" target="_blank" class="github"></a>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/scripts/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>