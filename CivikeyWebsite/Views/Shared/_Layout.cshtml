</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand"></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav center-nav">
                    <li>@Html.ActionLink( "Découvrir", "Index", "Home" )</li>
                    @*<li>@Html.ActionLink( "Premiers pas", "GetStarted", "Home" )</li>*@
                    <li>@Html.ActionLink( "Fonctionnalités", "Features", "Home" )</li>
                    <li>@Html.ActionLink( "Bibliothèque de claviers", "Keyboards", "Home" )</li>
                    <li>@Html.ActionLink( "Support", "Support", "Home" )</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="body-content" ng-app="CivikeyApp">
        @RenderBody()
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-7 align-left">
                    <ul>
                        <li>@Html.ActionLink( "Découvrir", "Index", "Home" )</li>
                        <li>@Html.ActionLink( "Les fonctionnalités", "Features", "Home" )</li>
                        <li>@Html.ActionLink( "Les claviers", "Keyboards", "Home" )</li>
                        <li>@Html.ActionLink( "Support", "Support", "Home" )</li>
                    </ul>
                    <div class="clearfix"></div>
                    <p class="align-left">
                        Site web développé par <br />
                        <a href="http://invenietis.com/fr"><img src="@Url.Content("~/Content/images/partners/grayscale/logo-small_white.png")" /></a>
                    </p>
                </div>
                <div class="col-md-4 col-md-offset-1">
                    <p>Suivre le projet</p>
                    <a href="https://github.com/Invenietis/ck-certified" target="_blank" class="github"></a>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render( "~/bundles/jquery" )
    @Scripts.Render( "~/bundles/scripts/bootstrap" )
    @Scripts.Render( "~/bundles/ajax" )
    @RenderSection( "Scripts", required: false )

</body>
</html>